<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="scrollClicked"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/app_name">


    <LinearLayout
        android:id="@+id/recycler_team_constrainLayout"
        android:onClick="constraintClicked"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recycler_team_teamImage_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher"></ImageView>

        <TextView
            android:id="@+id/recycler_team_teamName_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_textview"
            android:text="  takım adı  "
            android:textColor="#000"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"></TextView>

        <TextView
            android:id="@+id/recycler_team_alternateName_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_textview2"
            android:text="  takım takma adı  "
            android:textColor="#000"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="@+id/recycler_team_teamName_text"
            app:layout_constraintTop_toTopOf="@+id/textView2"></TextView>

        <TextView
            android:id="@+id/recycler_team_formedYear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_textview2"
            android:text="  tarih  "
            android:textColor="#000"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="@+id/recycler_team_alternateName_text"
            app:layout_constraintTop_toTopOf="@+id/textView3"></TextView>

        <TextView
            android:id="@+id/recycler_team_stadiumName_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="  stadyum adı  "
            android:textColor="#000"
            android:background="@drawable/custom_textview2"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="@+id/recycler_team_formedYear_text"
            app:layout_constraintTop_toTopOf="@+id/textView4"></TextView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Takım Adı : "
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/recycler_team_teamImage_image" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Takma Adı: "
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tarih : "
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Stadyum : "
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Takım Açıklaması"
            android:textColor="#000"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:layout_editor_absoluteX="0dp"></TextView>

        <TextView
            android:id="@+id/recycler_team_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="açıklama"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"></TextView>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>

