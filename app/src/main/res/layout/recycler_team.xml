<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="scrollClicked"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/app_name">


    <LinearLayout
        android:id="@+id/recycler_team_constrainLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/recycler_team_teamImage_image"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_gravity="left"
                    android:background="@drawable/custom_button_3"
                    android:layout_marginLeft="25dp"
                    app:srcCompat="@mipmap/ic_launcher"></ImageView>

                <TextView
                    android:id="@+id/recycler_team_formedYear_text"
                    android:layout_width="135dp"
                    android:layout_height="50dp"
                    android:textColor="#F9D342"
                    android:background="@drawable/custom_button_4"
                    android:text="  1884  "
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/madetommymedium"
                    android:textSize="28sp"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="left"></TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recycler_team_teamName_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:textColor="#F9D342"
                    android:background="@drawable/custom_button_4"
                    android:gravity="center"
                    android:text="  TakımAdı  "
                    android:fontFamily="@font/madetommymedium"
                    android:textSize="30sp"></TextView>

                <TextView
                    android:id="@+id/recycler_team_alternateName_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:gravity="center"
                    android:text="  TakmaAdı  "
                    android:layout_marginTop="5dp"
                    android:textColor="#F9D342"
                    android:background="@drawable/custom_button_4"
                    android:fontFamily="@font/madetommymedium"
                    android:textSize="30sp"></TextView>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="#FAD744"
            android:background="#1D1B1B"
            android:gravity="center"
            android:text="Takım Açıklaması"
            android:fontFamily="@font/madetommymedium"
            android:textSize="26sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/recycler_team_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Takım açıklaması"
            android:gravity="fill_horizontal"
            android:textColor="#FAD744"
            android:background="@drawable/custom_button_1"
            android:textSize="24sp"
            android:fontFamily="@font/madetommymedium"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:paddingBottom="20dp"></TextView>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>

